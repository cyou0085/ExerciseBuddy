<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.carlos.exercisebuddy.AddActivity">

    <TextView android:text="@string/select_Activity" android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView" />

    <Spinner
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/ActivityName"
        android:layout_below="@+id/textView"
        android:spinnerMode="dropdown"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView" />

    <TextView
        android:text="@string/select_day"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_below="@+id/ActivityName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/ActivityName"
        android:layout_alignEnd="@+id/ActivityName" />

    <Spinner
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/dayOfWeek"
        android:layout_below="@+id/textView2"
        android:spinnerMode="dropdown"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="@string/select_start"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:layout_below="@+id/dayOfWeek"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/dayOfWeek"
        android:layout_alignEnd="@+id/dayOfWeek" />

    <TextView
        android:text="@string/select_end"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:layout_below="@+id/startTime"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/spinner3"
        android:layout_toStartOf="@+id/spinner3" />

    <EditText
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:id="@+id/startTime"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="@string/time"
        android:layout_alignRight="@+id/textView3"
        android:layout_alignEnd="@+id/textView3" />

    <EditText
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:id="@+id/endTime"
        android:hint="@string/time"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/startTime"
        android:layout_alignEnd="@+id/startTime" />

    <Spinner
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:id="@+id/amOrpm"
        android:layout_below="@+id/textView3"
        android:spinnerMode="dropdown"
        android:layout_toRightOf="@+id/startTime"
        android:layout_alignBottom="@+id/startTime" />

    <Spinner
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:id="@+id/amOrpm2"
        android:spinnerMode="dropdown"
        android:layout_toRightOf="@+id/startTime"
        android:layout_alignTop="@+id/endTime"
        android:layout_alignBottom="@+id/endTime" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_send"
        android:id="@+id/button2"
        android:onClick="AddActivity"
        android:layout_below="@+id/amOrpm2"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
